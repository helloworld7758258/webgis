	<bean class="org.geomajas.configuration.FeatureInfo" name="layerPlanningLinesFeatureInfo">
		<property name="dataSourceName" value="com.hnee.webgis.server.Geoobjekt" />
		<property name="identifier">
			<bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
				<property name="label" value="id" />
				<property name="name" value="id" />
				<property name="type" value="LONG" />
			</bean>
		</property>
		<property name="geometryType">
			<bean class="org.geomajas.configuration.GeometryAttributeInfo">
				<property name="name" value="geometry" />
				<property name="editable" value="true" />
			</bean>
		</property>
        <property  name="attributes">
            <list>
                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                    <property name="label" value="Name"/>
                    <property name="name" value="name"/>
                    <property name="type" value="STRING"/>
                </bean>

                <bean class="org.geomajas.configuration.AssociationAttributeInfo">
                    <property name="label" value="Linfos"/>
                    <property name="name" value="linfos"/>
                    <property name="identifying" value="false" />
                    <property name="type" value="MANY_TO_ONE"/>
                    <property name="feature">
                        <bean class="org.geomajas.configuration.FeatureInfo">
                            <property name="dataSourceName" value="com.hnee.webgis.server.Linfos"/>
                            <property name="identifier">
                                <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                                    <property name="label" value="Id"/>
                                    <property name="name" value="gispadid"/>
                                    <property name="type" value="INTEGER"/>
                                </bean>
                            </property>
                            <property name="attributes">
                                <list>
                                    <bean class="org.geomajas.configuration.AssociationAttributeInfo">
                                        <property name="label" value="MPlanung"/>
                                        <property name="name" value="mplanung"/>
                                        <property name="type" value="MANY_TO_ONE"/>
                                        <property name="feature">
                                            <bean class="org.geomajas.configuration.FeatureInfo">
                                                <property name="dataSourceName"
                                                          value="com.hnee.webgis.server.MPlanung"/>
                                                <property name="identifier">
                                                    <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                                                        <property name="label" value="Id"/>
                                                        <property name="name" value="pkey"/>
                                                        <property name="type" value="LONG"/>
                                                    </bean>
                                                </property>
                                                <property name="attributes">
                                                    <list>
                                                        <bean class="org.geomajas.configuration.PrimitiveAttributeInfo">
                                                            <property name="label" value="Measures"/>
                                                            <property name="name" value="measurecount"/>
                                                            <property name="identifying" value="true"/>
                                                            <property name="type" value="LONG"/>
                                                        </bean>
                                                    </list>
                                                </property>
                                            </bean>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
	</bean>



